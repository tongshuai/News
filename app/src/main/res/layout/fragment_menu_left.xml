<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/fragment_left"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_slidingmenu_left">


    <RelativeLayout
        android:id="@+id/rl_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        >

        <ImageView
            android:id="@+id/iv_fragment_news"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:src="@drawable/biz_navigation_tab_news"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻联播"
            android:textColor="#FFF"
            android:layout_marginLeft="15dp"
            android:textSize="23dp"
            android:layout_toRightOf="@id/iv_fragment_news"
            android:layout_alignBottom="@id/iv_fragment_news"
            android:id="@+id/tv2_fragment_news"
            android:paddingBottom="35dp"
             />

        <TextView
            android:id="@+id/tv1_fragment_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="新闻"
            android:textSize="43dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_fragment_news"
            android:paddingTop="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        >

        <ImageView
            android:id="@+id/iv_fragment_reading"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:src="@drawable/biz_navigation_tab_read"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:layout_marginLeft="15dp"
            android:textSize="23dp"
            android:textColor="#FFF"
            android:layout_toRightOf="@id/iv_fragment_reading"
            android:layout_alignBottom="@id/iv_fragment_reading"
            android:id="@+id/tv2_fragment_reading"
            android:paddingBottom="35dp"
            />

        <TextView
            android:id="@+id/tv1_fragment_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:textColor="#FFF"
            android:textSize="43dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_fragment_reading"
            android:paddingTop="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        >

        <ImageView
            android:id="@+id/iv_fragment_local"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:src="@drawable/biz_navigation_tab_local_news"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前地点"
            android:textColor="#FFF"
            android:layout_marginLeft="15dp"
            android:textSize="23dp"
            android:layout_toRightOf="@id/iv_fragment_local"
            android:layout_alignBottom="@id/iv_fragment_local"
            android:id="@+id/tv2_fragment_local"
            android:paddingBottom="35dp"
            />

        <TextView
            android:id="@+id/tv1_fragment_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="位置"
            android:textSize="43dp"
            android:textColor="#FFF"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_fragment_local"
            android:paddingTop="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_commnet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        >

        <ImageView
            android:id="@+id/iv_fragment_commnet"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:src="@drawable/biz_navigation_tab_ties"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在交谈"
            android:layout_marginLeft="15dp"
            android:textSize="23dp"
            android:textColor="#FFF"
            android:layout_toRightOf="@id/iv_fragment_commnet"
            android:layout_alignBottom="@id/iv_fragment_commnet"
            android:id="@+id/tv2_fragment_commnet"
            android:paddingBottom="35dp"
            />

        <TextView
            android:id="@+id/tv1_fragment_commnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会话"
            android:textSize="43dp"
            android:textColor="#FFF"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_fragment_commnet"
            android:paddingTop="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        >

        <ImageView
            android:id="@+id/iv_fragment_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:src="@drawable/biz_navigation_tab_pics"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片"
            android:layout_marginLeft="15dp"
            android:textSize="23dp"
            android:textColor="#FFF"
            android:layout_toRightOf="@id/iv_fragment_photo"
            android:layout_alignBottom="@id/iv_fragment_photo"
            android:id="@+id/tv2_fragment_photo"
            android:paddingBottom="35dp"
            />

        <TextView
            android:id="@+id/tv1_fragment_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统图片"
            android:textSize="43dp"
            android:textColor="#FFF"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_fragment_photo"
            android:paddingTop="15dp"/>

    </RelativeLayout>
</LinearLayout>



