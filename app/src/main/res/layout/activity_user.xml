<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.feicui.news2.ui.UserActivity">

    <include
        layout="@layout/layout_tonghujiemian"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/center_top_bg">
        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:text="hehe"
            android:textSize="35dp"
            android:id="@+id/tv_name"
            android:layout_toRightOf="@id/iv_user"
            android:layout_alignTop="@id/iv_user"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:text="hehe"
            android:textSize="30dp"
            android:id="@+id/tv_namexia"
            android:layout_toRightOf="@id/iv_user"
            android:layout_alignBottom="@id/iv_user"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="30dp"
            android:text="跟帖数统计："
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="40dp"
            android:id="@+id/tv_jishu"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="登录日志"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <ListView
        android:id="@+id/lv_rizhi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"></ListView>
<Button
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/red"
    android:layout_weight="0"
    android:id="@+id/btn_tuichu"
    android:text="退出登录"
    android:textSize="18dp"
    android:textColor="@color/white"
    android:layout_marginBottom="10dp"/>

</LinearLayout>
